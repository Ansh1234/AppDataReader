<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="ComAwesomeDroidAppStorageReaderTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/com_awesomedroidapps_inappstoragereader_primary</item>
        <item name="colorPrimaryDark">
            @color/com_awesomedroidapps_inappstoragereader_color_primary_dark
        </item>
        <item name="colorAccent">@color/com_awesomedroidapps_inappstoragereader_color_accent</item>
    </style>

    <style name="ComAwesomeDroidAppEditTextTheme">
        <item name="backgroundTint">#000000</item>
    </style>

    <style name="ComAwesomeDroidAppsDataItemHeaderTextView" parent="@style/ComAwesomeDroidAppsDataItemTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ComAwesomeDroidAppsDataItemTextView" parent="android:Widget.TextView">
        <item name="android:textColor">
            @color/com_awesomedroidapps_inappstoragereader_shared_preference_textViewColor
        </item>
        <item name="android:textSize">@dimen/com_awesomedroidapps_inappstoragereader_sharedpreferences_textview_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minHeight">
            @dimen/com_awesomedroidapps_inappstoragereader_shared_preference_item_min_height
        </item>
        <item name="android:padding">@dimen/com_awesomedroidapps_inappstoragereader_sharedpreference_item_padding</item>
    </style>


</resources>